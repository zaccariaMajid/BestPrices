@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.User != null)
{
    <div class="text-center">
        <h1 class="display-4">Welcome @Model.User.Username on BestPrices</h1>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-1">
            </div>
            <div class="col rounded shadow">
                <div class="m-2">
                    <img src="~/img/search1.jpg" class="img-fluid bi-search" />
                </div>
                <div class="text-center mb-3">
                    <h1 class="display-4">Search a product</h1>
                    <a href="/search/" class="btn btn-outline-primary"><i class="bi bi-search"></i> Search now</a>
                </div>
            </div>
            <div class="col-sm-3">
            </div>
            <div class="col rounded shadow">
                <div class="m-2">
                    <img src="~/img/login1.jpg" class="img-fluid bi-search" />
                </div>
                <div class="text-center">
                    <h1 class="display-4">Become a User</h1>
                </div>
            </div>
            <div class="col-sm-1">
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welcome on BestPrices</h1>
        <p class="mt-5"><a href="/users/register">Become a User</a> for a best experience on BestPrices</p>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-1">
            </div>
            <div class="col rounded shadow m-3">
                <div class="m-2">
                    <img src="~/img/search2.png" class="img-fluid bi-search" width="500" height="500"/>
                </div>
                <div class="text-center mb-3">
                    <h1 class="display-4">Search a product</h1>
                    <a href="/search/" class="btn btn-outline-primary"><i class="bi bi-search"></i> Search now</a>
                </div>
            </div>
            <div class="col rounded shadow m-3">
                <div class="m-2">
                    <img src="~/img/login1cp.jpg" class="img-fluid bi-search" width="300" height="300"/>
                </div>
                <div class="text-center mb-3">
                    <h1 class="display-4">Become a User</h1>
                    <a href="/users/register" class="btn btn-outline-primary"><i class="bi bi-box-arrow-in-right"></i> Register now</a>
                        
                </div>
            </div>
            <div class="col rounded shadow m-3">
                <div class="m-2">
                    <img src="~/img/login2cp.png" class="img-fluid bi-search" />
                </div>
                <div class="text-center mb-3">
                    <h1 class="display-4">Have you already an account?</h1>
                    <a href="/users/login" class="btn btn-outline-primary"><i class="bi bi-box-arrow-in-right"></i> Log in</a>
                </div>
            </div>
            <div class="col-sm-1">
            </div>
        </div>
    </div>
}
