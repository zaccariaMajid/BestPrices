@page
@model BestPrices.Site.Pages.Users.SigninModel
@{
    ViewData["Title"] = "Sign in";
}
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="text-sm-center">
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <label>E-mail</label>
                <input type="email" class="form-control" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <label>Password</label>
                <input type="password" class="form-control" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <label>Confirm password</label>
                <input type="password" class="form-control" />
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <input type="submit" class="btn btn-block btn-primary" value="Sign in" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <label>Do you already have an account? <a asp-page="/users/login">Log in</a></label>
            </div>
        </div>
    </div>

</form>