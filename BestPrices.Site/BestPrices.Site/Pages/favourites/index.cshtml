@page
@model BestPrices.Site.Pages.favourites.indexModel
@{
    ViewData["Title"] = "Favourites";
}
@if (Model.User == null)
{
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
    <div class="text-center mt-5">
        <p>You are not logged in! <a asp-page="/users/register">Register</a> or <a asp-page="/users/login">Log in</a></p>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"] - @Model.User.Username</h1>
    </div>
    <form method="post">
        <div class="container mt-5">
            @if (Model.Products != null)
            {
                @foreach (var product in Model.Products)
                {
                    <div class="row mt-5 rounded shadow">
                        <div class="col-sm-4">
                            <img src="@product.PathPhoto" alt="prova img" class="img-fluid mt-2 mb-3">
                        </div>
                        <div class="col-sm">
                            <div class="row ml-5">
                                <div class="col">
                                    <h3 class="display-4">@product.Name</h3>
                                </div>
                                <div class="col text-right mt-2 mr-3">
                                    <span class="float-right"><i class="bi bi-heart" style="font-size: 2.3em; "></i></span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm ml-5">
                                    <h3>€@product.Price</h3>
                                </div>
                                <div class="col-sm text-center">
                                    <a class="btn btn-outline-primary" href="@product.Link" target="_blank">Buy now</a>
                                </div>
                            </div>
                            <br /><br />
                            <p class="ml-5">Ecommerce: <b>@Model.GetEcommerceById(product.IdEcommerce)</b></p>
                        </div>
                    </div>
                }
            }
        </div>
    </form>
}
